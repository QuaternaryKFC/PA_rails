<div class="row">
  <div class="col-lg-10">
    <h1>Search and enroll courses</h1>
  </div>
  <div class="col-sm-1">
    <%= link_to "Home", user_path(current_user.id), method: :get %>
  </div>
  <div class="col-sm-1">
    <%= link_to "Log out", logout_path, method: :delete %>
  </div>
</div>

<div class="container">
  <%= form_tag(search_path,
               method: :get) do %>
    <div class="form-row">
      <div class="col-lg-4">
        <%= collection_select :subject, :id,
                              Subject.order(:name),
                              :id, :name,
                              {selected: @subject ? @subject.id : Subject.order(:name).first.id},
                              {class: "custom-select"} %>
      </div>
      <div class="col-lg-3">
        <%= text_field_tag :course_name, params ? params[:course_name] : "", class: "form-control", placeholder: "Course name" %>
      </div>
      <div class="col-md-2 col-3">
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

<div class="container">
  <%= render 'courses' %>
  <hr>
</div>
